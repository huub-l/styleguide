h2 Buttons Type
-
  var buttonTypes = [
    { type: 'primary', text: 'テキストデモ'},
    { type: 'secondary', text: 'テキストデモ' },
    { type: 'olight', text: 'テキストデモ' },
    { type: 'blight', text: 'テキストデモ' },
  ];

.row
  each val in buttonTypes
    .col-3
      .code-example
        .demo
          +buttons({
            text: val.text,
            type: val.type
          })
        pre
          code
            | +buttons({
            |   text: '#{val.text}',
            |   type: '#{val.type}'
            | })

