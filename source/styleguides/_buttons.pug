.row
  each val in buttonIcons
    .col-3
      .code-example
        .demo
          +buttons({
            text: val.text,
            type: val.type,
            size: val.size ? val.size: null,
            iconFont: val.iconFont
          })
        pre
          code
            if (val.size)
              | +buttons({
              |   text: '#{val.text}',
              |   type: '#{val.type}',
              |   size: '#{val.size}',
              |   iconFont: '#{val.iconFont}'
              | })
            else
              | +buttons({
              |   text: '#{val.text}',
              |   type: '#{val.type}',
              |   iconFont: '#{val.iconFont}'
              | })
  
