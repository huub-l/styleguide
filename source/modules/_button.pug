//-------------------------------------------------------
//- Modules :: Button
//-------------------------------------------------------

mixin buttons({ text, type, size, iconFont, isFull })
  button.btn.button(
    class= type ? `button--${type}` : null
    class= size ? `button--${size}` : null
    class= (isFull === true) ? 'button--full' : null
  )&attributes(attributes)
    if (iconFont !== '' && iconFont !== undefined)
      i.button__icon(class= iconFont)
    | #{text}

mixin buttons-disable({ text, disabled, type })
  button.btn.button(
    disabled= disabled ? disabled : null
    class= type ? `button--${type}` : null
    class= disabled ? `button--${disabled}` : null
  )&attributes(attributes)
    | #{text}
